{
  // workbench
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "vscode-icons",

  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.confirmPasteNative": false,

  // editor setting
  "editor.fontSize": 16,
  "editor.renderWhitespace": "selection",
  "editor.rulers": [80, 120],
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.detectIndentation": false,
  "editor.useEditorConfig": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,

  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // git setting
  "git.enableSmartCommit": true,
  "git.alwaysSignOff": true,
  "git.confirmSync": false,
  "git.fetchOnPull": true,
  "git.pruneOnFetch": true,

  // github
  "github.copilot.chat.commitMessageGeneration.instructions": [
    { "text": "Style: Strictly follow the Angular Commit Message Format <type>(<scope>): <short summary>." },
    { "text": "Types: build, ci, docs, feat, fix, perf, refactor, style, test." },
    { "text": "Scope: Optional. Use lowercase (e.g., 'runner', 'api')." },
    { "text": "Subject: Imperative mood (e.g., 'add' not 'added'). No period. Max 100 chars." },
    {
      "text": "Body: MANDATORY. Follow Linux Kernel rules: Explain 'why' the change is needed and 'how' it addresses the issue. Do NOT simply paraphrase the code."
    },
    { "text": "Formatting: Separate subject from body with a blank line. Hard-wrap the body text at 72 characters." }
  ],

  // error Lens
  "errorLens.fontStyleItalic": true,
  "errorLens.messageBackgroundMode": "message",

  // prettier
  "prettier.useEditorConfig": true,

  // go
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.inlayHints.enabled": "on"
  },
  "gopls": {
    "ui.completion.usePlaceholders": true,
    "analyses": {
      "shadow": true,
      "unusedparams": true,
      "nilness": true
    }
  },
  "go.toolsEnvVars": {
    "GOPROXY": "https://goproxy.cn,direct"
  },
  "go.toolsManagement.autoUpdate": true,
  "go.formatTool": "gofumpt",
  "go.lintTool": "golangci-lint",
  "go.inlayHints.assignVariableTypes": true,
  "go.inlayHints.compositeLiteralFields": true,
  "go.inlayHints.constantValues": true,
  "go.inlayHints.functionTypeParameters": true,
  "go.inlayHints.parameterNames": true,
  "go.inlayHints.rangeVariableTypes": true,

  // lua
  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua"
  },

  // python
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },

  // shell
  "shellcheck.enable": true,
  "shellcheck.enableQuickFix": true,
  "shellcheck.run": "onSave",
  "[shellscript]": {
    "editor.defaultFormatter": "mkhl.shfmt", // https://github.com/mvdan/sh
    "editor.codeActionsOnSave": {
      "source.fixAll.shellcheck": "explicit"
    }
  },

  // yaml
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "yaml.format.printWidth": 500
}
