{
  "log": {
    "level": "warn",
    "output": "/var/log/sing-box/sing-box.log",
    "timestamp": true
  },
  "dns": {
    "servers": [
      {
        "tag": "google-dns",
        "address": "8.8.8.8",
        "detour": "direct"
      },
      {
        "tag": "cloudflare-dns",
        "address": "1.1.1.1",
        "detour": "direct"
      },
      {
        "tag": "netflix-dns",
        "address": "https://8.8.8.8/dns-query",
        "address_resolver": "google-dns",
        "strategy": "ipv4_only",
        "detour": "direct"
      },
      {
        "tag": "block-dns",
        "address": "rcode://success"
      }
    ],
    "rules": [
      {
        "geosite": "netflix",
        "server": "netflix-dns"
      },
      {
        "geosite": "category-ads-all",
        "server": "block-dns"
      },
      {
        "outbound": "any",
        "server": "google-dns"
      }
    ],
    "strategy": "prefer_ipv4"
  },
  "ntp": {
    "enabled": true,
    "server": "time.google.com",
    "server_port": 123,
    "interval": "60m",
    "detour": "direct"
  },
  "outbounds": [
    {
      "type": "direct",
      "tag": "direct",
      "domain_strategy": "prefer_ipv4"
    },
    {
      "type": "block",
      "tag": "block"
    },
    {
      "type": "dns",
      "tag": "dns-out"
    }
  ],
  "route": {
    "rules": [
      {
        "protocol": "dns",
        "outbound": "dns-out"
      },
      {
        "protocol": "bittorrent",
        "outbound": "block"
      },
      {
        "ip_is_private": true,
        "outbound": "block"
      },
      {
        "geosite": ["category-ads-all"],
        "outbound": "block"
      },
      {
        "geoip": ["private", "cn"],
        "outbound": "block"
      }
    ],
    "rule_set": [
      {
        "tag": "geosite",
        "type": "remote",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite.srs",
        "download_detour": "direct"
      },
      {
        "tag": "geoip",
        "type": "remote",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geoip/rule-set/geoip.srs",
        "download_detour": "direct"
      }
    ],
    "auto_detect_interface": true,
    "final": "direct"
  }
}
